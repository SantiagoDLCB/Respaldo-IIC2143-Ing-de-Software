<h1 style="text-align: center;">All Initiatives</h1>

<ul style="list-style-type: none; padding: 0;">
    <% @all_initiatives.each do |initiative| %>
        <li style="margin-bottom: 10px;">
            <%= link_to initiative.name, initiative_path(initiative), style: "text-decoration: none; color: #333; background-color: #f5f5f5; padding: 10px; border-radius: 5px; display: block;" %>
        </li>
    <% end %>
</ul>