
<% if user_signed_in? && current_user.has_role?(:member, @initiative) %>
  <!-- Toggle button -->
  <label for="popup-toggle" class="open-popup-button">Reportar</label>
  <input type="checkbox" id="popup-toggle" class="popup-toggle">

  <!-- Overlay -->
  <div class="popup-overlay"></div>

  <!-- Popup Form -->
  <div class="popup-form">
    <div class="close-popup"> 
        <label for="popup-toggle"><a href="#">Close</a></label> 
    </div>
    <h2>Popup Form</h2>
    <%= form_with(model: @report, url: initiative_reports_path(@initiative), method: :post) do |form| %>
        <%= form.text_area  :reason, placeholder: "Motivo del reporte"%>
        <%= form.text_area :content, placeholder: "Describe tu situaciÃ³n" %>
        <%= form.hidden_field :user_id, value: current_user.id %>
        <%= form.submit "Enviar Reporte", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>