<!DOCTYPE html>
<html>

<body style="text-align: center;">
<h2>Inicio de sesión</h2>

<div class="column is-half is-offset-one-quarter" data-theme="light">
<div class="box" style="background-color: rgba(255, 255, 255, 0.5);">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
  <%= f.label 'Correo', class: "label is-medium" %>
  <div class="control">
    <%= f.email_field :email, class: "input", placeholder: "Correo", required: true, autofocus: true, autocomplete: "email" %>
  </div>
  </div>

  <div class="field">
  <%= f.label 'Contraseña', class: "label is-medium" %>
  <div class="control">
    <%= f.password_field :password, class: "input", placeholder: "Contraseña", required: true, autocomplete: "current-password" %>
  </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuérdame" %>
    </div>
  <% end %>

  <div class="field">
  <div class="control">
    <div class="buttons is-centered">
      <%= f.submit "Iniciar sesión", class: "button is-link" %>
      <%= link_to "Cancelar", root_path, class: "button is-link is-light" %>
    </div>
  </div>
  </div>
<% end %><br>
</div>
</div>

<!-- render "devise/shared/links" %> -->
</body>
</html>
