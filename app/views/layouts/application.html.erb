<!DOCTYPE html>
<html>
  <head>
    <title>Iniciativas Estudiantiles UC</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link rel="icon" type="image/png" href="<%= asset_path 'jorge-munoz.jpg' %>">
  </head>


    <body>
    <div class="header">
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_user_registration_path %>
        <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
        <%= link_to "Crear Iniciativa", new_initiative_path, method: :delete %>
      <% else %>
        <%= button_to "Sign in", new_user_session_path %>
        <%= button_to "Sign up", new_user_registration_path %>
      <% end %>
    </div>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>

  </body>
</html>
