<!DOCTYPE html>
<html>
<head>
  <title>Detalles del Evento</title>
  <link rel="stylesheet" href="<%= asset_path 'show_event.css' %>">
</head>

<body>
  <main class="container">
    <section class="hero is-small background-image" style="<% if @event.initiative.persisted? && @event.initiative.image.attached? %>background-image: url('<%= url_for(@initiative.image) %>');<% end %>">
      <div class="hero-body">
          <br><br>
          <h1 style="font-size: 45px; font-family: 'Courier', monospace; font-weight: bold; color: white; text-align: center;">Evento: <%=@event.name%></h1>
          <br><br>
      </div>
    </section>

<br><br>

  <div class = "columns">
      <div class="column is-4 is-offset-1">
        <% if not @event.is_active? %>
          <div class="block">
            <h2>Evento finalizado</h2>
          </div>
        <% end %>
        <div class="block">
          <br><h3>Iniciativa que organiza</h3>
          <h5><%= @initiative.name %></h5>
        </div>
        
        <div class="block">
          <h3>Descripción</h3>
          <h5><%=@event.description%></h5>
        </div>


        <% if @event.is_active? %>
          <div class="block">
            <h3>Miembros actuales</h3>
            <% if @event.get_attendants.empty? %>
              <h5><em>Este evento no tiene miembros.</em></h5>
            <% end %>
            <ul>
              <% @event.get_attendants.each do |user| %>
                <li><h5><%= user.name %> <%= user.last_name %></h5></li>
              <% end %>
            </ul>
          </div>
        
          <div class="block">
            <!-- Mostrar la cantidad de miembros actuales / capacidad total -->
            <h3>Capacidad</h3>
            <h5><%= @event.get_attendants.count %>/<%= @event.capacity %></h5>
          </div>

        <% end %>

      </div>

      <div class="column is-3 is-offset-4">
        <div data-theme="light"><%= render 'menu'%></div>
      </div>

  </div>

  <br><hr>
  <div class = "columns">
    <div class="column is-8 is-offset-2">
      <div class="block has-text-centered" data-theme="light">
        <h3>Reseñas</h3>

        <% if @reviews.empty? %>
          <h5><em>Este evento no tiene reviews.</em></h5>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="box">
              <div class="level mb-1">
                <div class="level-left">
                  <span class="tag is-dark">@<%= review.user.username %></span>
                </div>
                <div class="level-right">
                  <span class="tag is-warning">
                    <%= review.calification %>/5
                  </span>
                </div>
              </div>
              <div class="content" style="text-align: left;">
                <%= review.content %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>


  <div class="columns">
    <!-- Anuncios -->
    <div class="column is-8 is-offset-2">
      <%= render 'notices'%>
    </div>
  </div>

  </main>
  <br><br><br>
</body>
</html>
