<!DOCTYPE html>
<html>
  <head>
    <title>Iniciativas Estudiantiles UC</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link rel="icon" type="image/png" href="<%= asset_path 'jorge-munoz.jpg' %>">
  </head>
  <body>

  <div class="header">
  <% if user_signed_in? %>
    <%= button_to "Inicio", initiatives_path, method: :get%>
    <%= button_to "Crear Iniciativa", new_initiative_path, method: :get %>
    <%= button_to "Ver Perfil", edit_user_registration_path, method: :get %>
    <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete %> 
  <% else %>
    <!-- Boton a root path -->
    <%= button_to "Inicio", root_path, method: :get%>
    <%= button_to "Registrarse", new_user_registration_path, method: :get %>
    <%= button_to "Iniciar sesión", new_user_session_path, method: :get%>
  <% end %>
  </div>
  <% flash.each do |name, msg| %>
  <div class="flash-message" id="flash_<%= name %>">
    <%= msg %>
  </div>
  <% end %>

  <%= yield %>

  </body>
</html>
