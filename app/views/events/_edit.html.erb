  <% if current_user.has_role?(:admin_initiative, @initiative) %>
    <button onclick="openModal('edit_event_popup');" class="button is-primary">
      Editar Evento

    </button>
    <div class="modal" id="edit_event_popup">
      <div class="modal-background"></div>
      <div class="modal-card">
        <header class="modal-card-head">
          <p class="modal-card-title">
            Editar Evento
          </p>
          <button onclick="closeModal('edit_event_popup');" class="delete" aria-label="close"></button>

        </header>
        <%= form_with(model: @event,  method: :patch, remote: true) do |form| %>
        <section class="modal-card-body" style="text-align: center;">

            <div class="field">
            <%= form.label 'Nombre', class: "label is-medium" %>
            <div class="control">
              <%= form.text_field :name, class: "input is-medium", placeholder: "Nombre", required: true %>
            </div>
          </div>

        <div class="field">
            <%= form.label 'Descripción', class: "label" %>
            <div class="control">
              <%= form.text_area :description, class: "textarea", placeholder: "Descripción", required: true %>
            </div>
        </div>

        <div class="field">
          <%= form.label "Capacidad", class: "label" %>
          <div class="control">
            <%= form.number_field :capacity, class: "input", required: true, placeholder: "100", min: 1 %>
          </div>
        </div>

        </section>
        <footer class="modal-card-foot">
            <%= form.hidden_field :update_type, value: 'data' %>
            <%= form.submit "Guardar cambios", class: "button is-primary"%>
            <% end %>

          <button class="button is-danger" onclick="closeModal('edit_event_popup');">
            Cancelar
          </button>
        </footer>
      </div>
    </div>



  <% end %>
