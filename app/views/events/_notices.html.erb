
<% if user_signed_in? && (current_user.has_role?(:attendant, @event)|current_user.has_role?(:admin_initiative, @event.initiative)) %>
    <div class="block has-text-centered" data-theme="light">
        <h3> Anuncios </h3>
            <% if @notices.empty? %>
                <h5><em>Este evento no tiene anuncios.</em></h5>
            <% end %>
            <% @notices.each do |notice| %>
            <div class="card is-small">
              <header class="card-header">
                <h5 class="card-header-title"><%= notice.title %></h5>
                <button class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                </button>
              </header>
              <div class="card-content">
                <div class="content">
                  <h5><%= notice.content %></h5>
                </div>
              </div>
            </div>
            <% end %> 
    </div>
<% end %> 