<!DOCTYPE html>
<html>

<body style="text-align: center;">
<h2>Inicio de sesión</h2>

<div class="column is-half is-offset-one-quarter">
<div class="box" style="background-color: rgba(255, 255, 255, 0.5);">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Correo" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuérdame" %>
    </div>
  <% end %>

  <div class="field">
  <div class="control">
    <div class="buttons is-centered">
      <%= f.submit "Iniciar sesión", class: "button is-link" %>
      <%= link_to "Cancelar", root_path, class: "button is-link is-light" %>
    </div>
  </div>
  </div>
<% end %><br>
</div>
</div>

<!-- render "devise/shared/links" %> -->
</body>
</html>
